{
  "version": 2,
  "builds": [
    {
      "src": "Backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "Frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Backend/index.js" },
    { "src": "/(.*)", "dest": "Frontend/dist/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
