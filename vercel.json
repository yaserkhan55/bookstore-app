{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs22.x"
    },
    "Backend/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "builds": [
    { "src": "Backend/index.js", "use": "@vercel/node" },
    { "src": "Frontend/vite.config.js", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "Backend/index.js" },
    { "src": "/(.*)", "dest": "Frontend/dist/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
